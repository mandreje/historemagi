# Server Configuration
VITE_POCKETBASE_URL=http://127.0.0.1:8090
VITE_API_URL=http://localhost:8090/api

# Admin Authentication
VITE_POCKETBASE_ADMIN_EMAIL=admin@example.com
VITE_POCKETBASE_ADMIN_PASSWORD=your-secure-password123

# JWT Configuration
VITE_JWT_SECRET=your-jwt-secret-key-min-32-chars
VITE_JWT_EXPIRY=7d

# OpenAI Integration (for story generation)
VITE_OPENAI_API_KEY=your-openai-api-key

# AWS Configuration (for text-to-speech)
VITE_AWS_REGION=eu-north-1
VITE_AWS_ACCESS_KEY=your-aws-access-key
VITE_AWS_SECRET_KEY=your-aws-secret-key
VITE_AWS_BUCKET_NAME=your-s3-bucket-name

# Stripe Configuration (for payments)
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
VITE_STRIPE_SECRET_KEY=your-stripe-secret-key
VITE_STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Service (for notifications)
VITE_SMTP_HOST=smtp.example.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-smtp-username
VITE_SMTP_PASS=your-smtp-password
VITE_EMAIL_FROM=noreply@historiemagi.no

# Redis Configuration (for caching)
VITE_REDIS_URL=redis://localhost:6379

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_APPLE_PAY=true
VITE_ENABLE_VIPPS=true